{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "ESNext", "es5", "es6", "dom", "dom.iterable"],
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["index.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"],
  "moduleResolution": "node",
  "module": "commonjs",
  "types": ["node"],
  "typeRoots": ["../node_modules/@types"]
}
